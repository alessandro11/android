<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="true"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Here you must set explicit, since there is no global tag package -->
    <fragment
        android:name="com.m3cool.fragmentslayouts.ListFragment"
        android:id="@+id/my_list_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_weight="3" />
    <!-- Here you must set explicit, since there is no global tag package -->
    <fragment
        android:name="com.m3cool.fragmentslayouts.DetailsFragment"
        android:id="@+id/my_details_fragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>
